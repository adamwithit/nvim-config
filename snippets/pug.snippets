snippet data-submenu-edit-one-value
	data-submenu={
		mixin: "p-edit-one-value",
		data: {
			url: `\${baseUrl}/...post url...`,
			value: "current value",
			type: "text",
			name: `Input name`,
	}
snippet data-submenu
	data-submenu={
		mixin: "p-edit-one-value",
		data: {
			url: `\${baseUrl}/submiturl`,
			value: "currentvalue",
			type: "text",
			name: "Item name",
	}
snippet post-btn
	+post-btn({
		url: \`\${baseUrl}/update\`,
		data: {},
		confirm: "Are you sure?",
	}).btn1
snippet __
	__("$0")
snippet grid
	+grid(columns="$0").gx1.gy1
