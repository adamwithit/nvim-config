#!/usr/bin/env bash
# set -x

# search project.vim and .devbase/project.vim from $HOME
# ask with fzf, open or focus the picked project

# Prerequisite
# tmux 3.2+
# fdfind & fzf
#     sudo apt-get install fdfind fzf

# move up/down:  m-k / m-j
# accept:        c-j

input="$1"

